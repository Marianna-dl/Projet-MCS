<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margePrincipale"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tourne gauche"
        android:id="@+id/textViewTourneGauche"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:id="@+id/imageTourneGauche"
        android:layout_width="186dp"
        android:layout_height="163dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tourne_gauche"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Choix du type d'enregistrement :"
        android:id="@+id/textViewChoix"
        android:layout_marginBottom="20dp"/>

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radioGroupTourneGauche"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:checkedButton="@+id/radioTourneGaucheNonBruite">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrement bruité"
            android:id="@+id/radioTourneGaucheNonBruite"
            android:checked="false"
            android:layout_marginRight="50dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enregistrement non bruité"
            android:id="@+id/radioTourneGaucheBruite"
            android:checked="false"
            android:layout_marginRight="50dp" />

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enregistrer l'instruction"
        android:id="@+id/btnRecord"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ecouter l'instruction"
        android:id="@+id/btnEcoute"
        android:layout_gravity="center_horizontal" />

</LinearLayout>